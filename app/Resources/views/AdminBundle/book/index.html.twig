{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-8 col-md-offset-2">
    <h1>Books list</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Price</th>
                <th>Datepublished</th>
                <th>Abstract</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td><a href="{{ path('livre_show', { 'id': book.id }) }}">{{ book.id }}</a></td>
                <td>{{ book.title }}</td>
                <td>{{ book.price }}</td>
                <td>{% if book.datePublished %}{{ book.datePublished|date('Y-m-d') }}{% endif %}</td>
                <td>{{ book.abstract }}</td>
                <td>
                    <ul class="list-inline">
                        <li>
                            <a class="btn btn-primary btn-sm" href="{{ path('livre_show', { 'id': book.id }) }}">show</a>
                        </li>
                        <li>
                            <a class="btn btn-primary btn-sm" href="{{ path('livre_edit', { 'id': book.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a class="btn btn-primary" href="{{ path('livre_new') }}">Create a new book</a>
        </li>
    </ul>
    </div>

{% endblock %}
