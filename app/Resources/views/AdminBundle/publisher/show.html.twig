{% extends 'base.html.twig' %}

{% block body %}
<div class="col-md-8 col-md-offset-2">
    <h1>Publisher</h1>

    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publisher.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ publisher.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a class="btn btn-sm btn-primary" href="{{ path('editeur_index') }}">Back to the list</a>
        </li>
        <li>
            <a class="btn btn-sm btn-primary" href="{{ path('editeur_edit', { 'id': publisher.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <button class="btn btn-primary" type="submit" value="Delete">Delete</button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
